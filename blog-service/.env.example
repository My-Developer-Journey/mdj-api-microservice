# Blog Service - Environment Configuration Example
# Copy this file to .env.dev or .env.prod and fill in your actual values

SPRING_APPLICATION_NAME=blog-service
SERVER_PORT=your_server_port

# Database Configuration
DB_URL=your_db_url
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_DRIVER=your_db_driver

# Hibernate Configuration
SPRING_JPA_DATABASE_PLATFORM=your_jpa_database_platform
SPRING_JPA_HIBERNATE_DDL_AUTO=your_hibernate_ddl_auto
SPRING_JPA_SHOW_SQL=your_jpa_show_sql

# DevTools Properties
SPRING_DEVTOOLS_RESTART_ENABLED=your_devtools_restart_enabled
SPRING_DEVTOOLS_LIVERELOAD_ENABLED=your_devtools_livereload_enabled

# Spring Profile
SPRING_PROFILES_ACTIVE=dev
